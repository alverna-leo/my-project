@model List<Domain.Models.OrderDetail>
@{
    ViewData["Title"] = "Orders";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - StyleBay</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- HEADER / NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">

            <!-- LEFT -->
            <a class="navbar-brand fw-bold"
               asp-controller="Home" asp-action="Index">
                StyleBay
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- RIGHT -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white"
                           asp-controller="Admin" asp-action="Dashboard">
                            Dashboard
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <div class="container my-5">
        <div class="row g-4">

            @foreach (var item in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm border-0 order-card">
                        <div class="card-body">
                            <div class="row align-items-center text-center">

                                <div class="col-md-2">
                                    <small class="text-muted">Order ID</small>
                                    <div class="fw-bold">@item.Order?.Id.ToString().Substring(0, 8)</div>
                                </div>

                                <div class="col-md-2">
                                    <small class="text-muted">User</small>
                                    <div class="fw-bold">@item.Order?.User?.Name</div>
                                </div>

                                <div class="col-md-3">
                                    <small class="text-muted">Dress</small>
                                    <div class="fw-bold">@item.Dress?.Name</div>
                                </div>

                                <div class="col-md-1">
                                    <small class="text-muted">Qty</small>
                                    <div class="fw-bold">@item.Quantity</div>
                                </div>

                                <div class="col-md-2">
                                    <small class="text-muted">Date</small>
                                    <div class="fw-bold">@item.Order?.OrderDate.ToString("dd MMM yyyy")</div>
                                </div>

                                <div class="col-md-2">
                                    <small class="text-muted">Amount</small>
                                    <div class="fw-bold text-success">₹ @(item.Price * item.Quantity)</div>

                                    @* <div class="fw-bold text-success">₹ @(item.Price)</div> *@
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
    <!-- BACK BUTTON -->
    <div class="text-center mt-5">
        <a asp-controller="Admin"
           asp-action="Dashboard"
           class="btn btn-primary px-4 rounded-pill">
            ← Back to Dashboard
        </a>
    </div>
</body>
</html>