@model IEnumerable<Domain.Models.User>

@{
    ViewData["Title"] = "User List";
    Layout = null;   // ✅ Removes default header & footer
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List - StyleBay</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <!-- HEADER / NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">

            <!-- LEFT -->
            <a class="navbar-brand fw-bold"
               asp-controller="Home" asp-action="Index">
                StyleBay
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- RIGHT -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white"
                           asp-controller="Admin" asp-action="Dashboard">
                            Dashboard
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <!-- PAGE CONTENT -->
    <div class="container py-4">

        <h2 class="text-center mb-4">User List</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle text-center">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">
                                No users found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td> <!-- Will now display GUID -->

                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <form asp-action="DeleteUser"
                                          asp-controller="Admin"
                                          method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this user?');">

                                        <!-- Hidden input now passes GUID -->
                                        <input type="hidden" name="id" value="@user.Id" />

                                        <button type="submit"
                                                class="btn btn-outline-danger btn-sm">
                                            Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
