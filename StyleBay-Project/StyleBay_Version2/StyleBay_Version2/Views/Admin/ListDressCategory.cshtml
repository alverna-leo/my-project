@model IEnumerable<Domain.Models.DressCategory>

@{
    ViewData["Title"] = "Dress Categories";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - StyleBay</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-yellow {
            background-color: #FFD700;
            color: #000;
        }

            .btn-yellow:hover {
                background-color: #FFC300;
                color: #000;
            }
    </style>
</head>
<body class="bg-light">
    <!-- HEADER / NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">

            <!-- LEFT -->
            <a class="navbar-brand fw-bold"
               asp-controller="Home" asp-action="Index">
                StyleBay
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- RIGHT -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white"
                           asp-controller="Admin" asp-action="Dashboard">
                            Dashboard
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Dress Categories</h4>

        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm">
                @* <thead class="table-dark"> *@
                <thead style="background-color:#2c7ef2; color:black;">
                    <tr>
                        <th>Name</th>
                        <th style="width:150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <a asp-action="CreateDressCategory" class="btn btn-yellow"> Add Category</a>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a asp-action="DeleteDressCategory" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- BACK BUTTON -->
            <div class="text-center mt-5">
                <a asp-controller="Admin"
                   asp-action="Categories"
                   class="btn btn-primary px-4 rounded-pill">
                    ← Back to Categories
                </a>
            </div>
        </div>
</body>
</html>