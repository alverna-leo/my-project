@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>


    <style>
        /* Full page and center */
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: white;
            min-height: 100vh;
            margin: 0;
            /* display: flex;
                            justify-content: center;
                            align-items: center; */
        }

        .dashboard-container {
            width: 90%;
            max-width: 1400px;
            margin: 50px auto; /* centers container horizontally with spacing from navbar */
            text-align: center;
            color: #0f4c75;
        }

        h2 {
            color: white;
            margin-bottom: 40px;
            font-size: 2rem;
        }

        /* Flex row for cards, auto-fit sizing */
        .cards {
            display: flex;
            flex-wrap: wrap; /* allow cards to wrap on smaller screens */
            gap: 20px;
            justify-content: center; /* center cards horizontally */
            align-items: stretch;
        }

        .card {
            flex: 1 1 0; /* grow/shrink to fit available space */
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 20px 45px rgba(0,0,0,0.2);
            text-align: center;
            transition: transform 0.2s, box-shadow 0.2s;
            color: #1a1a1a;
            min-width: 200px; /* don't shrink too much */
            max-width: 250px; /* don't grow too big */
            background: #fff;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 25px 50px rgba(0,0,0,0.3);
            }

            .card h4 {
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .card p {
                font-size: 1rem;
                margin-bottom: 20px;
            }

            .card a {
                display: inline-block;
                text-decoration: none;
                padding: 10px 20px;
                border-radius: 10px;
                font-weight: bold;
                transition: background 0.2s;
            }

                .card a:hover {
                    opacity: 0.9;
                }

        /* Card colors */
        .card-add-dress {
            background: #e6f0ff;
        }

        .card-list-products {
            background: #e6fff0;
        }

        .card-list-orders {
            background: #fff0e6;
        }

        .card-view-users {
            background: #ffe6e6;
        }

        .card-add-categories {
            background: #fff5e6;
        }

        .card-add-dress a {
            background: #66b3ff;
            color: #1a1a1a;
        }

        .card-list-products a {
            background: #66d9a6;
            color: #1a1a1a;
        }

        .card-list-orders a {
            background: #ffb366;
            color: #1a1a1a;
        }

        .card-view-users a {
            background: #ff9999;
            color: #1a1a1a;
        }

        .card-add-categories a {
            background: #ffcc99;
            color: #1a1a1a;
        }
    </style>
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand fw-bold text-white" href="#">
                    StyleBay
                </a>

                <!-- Toggler for small screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="dashboard-container">
        <h2 style="color:blue">🛡️ Admin Dashboard</h2>

        <div class="cards">
            <!-- Add Dress Card -->
            <div class="card card-add-dress">
                <i class="fas fa-tshirt" style="font-size:2rem;"></i>
                <h4>➕ Add Dress</h4>
                <p>Add a new dress to the product catalog</p>
                <a asp-controller="Admin" asp-action="Create">Add Dress</a>
            </div>

            <!-- List Products Card -->
            <div class="card card-list-products">
                <i class="fas fa-boxes" style="font-size:2rem;"></i>
                <h4>📦 List Products</h4>
                <p>View all available products</p>
                <a asp-controller="Admin" asp-action="Index">View Products</a>
            </div>

            <!-- List Orders Card -->
            <div class="card card-list-orders">
                <i class="fas fa-shopping-cart" style="font-size:2rem;"></i>
                <h4>🛒 List Orders</h4>
                <p>View all customer orders</p>
                <a asp-controller="Admin" asp-action="ListOrders">View Orders</a>
            </div>

            <!-- View Users Card -->
            <div class="card card-view-users">
                <i class="fas fa-users" style="font-size:2rem;"></i>
                <h4>👥 View Users</h4>
                <p>See all registered users</p>
                <a asp-controller="Admin" asp-action="UserList">View Users</a>
            </div>

            <!-- Add Categories Card -->
            <div class="card card-add-categories">
                <i class="fas fa-tags" style="font-size:2rem;"></i>
                <h4>🏷️ Add Categories</h4>
                <p>Create or manage product categories</p>
                <a asp-controller="Admin" asp-action="Categories">Add Categories</a>
            </div>
        </div>
    </div>
</body>
</html>
