@model Domain.Models.PriceCategory

@{
    ViewData["Title"] = "Edit Price Category";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Price Category - StyleBay</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-light">

    <!-- BLUE ADMIN HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold"
                   asp-controller="Home"
                   asp-action="Index">
                    StyleBay
                </a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Account"
                               asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- EDIT PRICE CATEGORY -->
    <main class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">

                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">Edit Price Category</h4>
                    </div>

                    <div class="card-body p-4">

                        <form asp-action="EditPriceCategory" method="post">
                            @Html.AntiForgeryToken()

                            <input type="hidden" asp-for="Id" />

                            <!-- Name -->
                            <div class="mb-3">
                                <label asp-for="Name"
                                       class="form-label fw-semibold"></label>
                                <input asp-for="Name"
                                       class="form-control" />
                                <span asp-validation-for="Name"
                                      class="text-danger"></span>
                            </div>

                            <!-- Min Price -->
                            <div class="mb-3">
                                <label asp-for="MinPrice"
                                       class="form-label fw-semibold"></label>
                                <input asp-for="MinPrice"
                                       class="form-control" />
                                <span asp-validation-for="MinPrice"
                                      class="text-danger"></span>
                            </div>

                            <!-- Max Price -->
                            <div class="mb-4">
                                <label asp-for="MaxPrice"
                                       class="form-label fw-semibold"></label>
                                <input asp-for="MaxPrice"
                                       class="form-control" />
                                <span asp-validation-for="MaxPrice"
                                      class="text-danger"></span>
                            </div>

                            <!-- Buttons -->
                            <div class="d-flex justify-content-between">
                                <a asp-controller="Admin"
                                   asp-action="ListPriceCategory"
                                   class="btn btn-outline-secondary">
                                    ← Back
                                </a>

                                <button type="submit"
                                        class="btn btn-success px-4">
                                    Update
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
