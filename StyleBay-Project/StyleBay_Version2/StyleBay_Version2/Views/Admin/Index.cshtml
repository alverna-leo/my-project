@model IEnumerable<Domain.Models.Dress>

@{
    ViewData["Title"] = "Products";
    Layout = null;   // ✅ IMPORTANT: removes default header & footer
}
<!-- ✅ Internal CSS -->
<style>
    .dress-img-wrapper {
        width: 100%;
        height: 260px; /* SAME height for all cards */
        overflow: hidden;
        border-radius: 6px;
        background-color: #f8f9fa;
    }

        .dress-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Crops without distortion */
            object-position: center;
            display: block;
        }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - StyleBay</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    @* <link rel="stylesheet" href="~/css/Products.css" /> *@
</head>

<body class="bg-light">

    <!-- HEADER / NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">

            <!-- LEFT -->
            <a class="navbar-brand fw-bold"
               asp-controller="Home" asp-action="Index">
                StyleBay
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- RIGHT -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white"
                           asp-controller="Admin" asp-action="Dashboard">
                            Dashboard
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    
    <div class="container mt-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Dresses</h3>
            <a asp-action="Create" class="btn btn-primary">
                Add New Dress
            </a>
        </div>

        <div class="row g-4">

            @foreach (var dress in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">

                    <div class="card h-100 shadow-sm">

                        <!-- Image -->
                        <div class="dress-img-wrapper">
                            <img src="@(string.IsNullOrEmpty(dress.ImageName)
                                    ? "/images/no-image.png"
                                    : dress.ImageName)"
                                 alt="@dress.Name"
                                 class="img-fluid" />
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-center">
                            <h6 class="card-title mb-1">@dress.Name</h6>
                            <p class="text-muted mb-1">₹@dress.Price</p>

                            <span class="badge bg-secondary">
                                @dress.PriceCategory?.Name
                            </span>
                            <p class="text-muted mb-1">@dress.Description</p>
                        </div>

                        <!-- Card Footer -->
                        <div class="card-footer bg-white border-0 d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@dress.Id"
                               class="btn btn-sm btn-outline-primary">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@dress.Id"
                               class="btn btn-sm btn-outline-danger">
                                Delete
                            </a>
                        </div>

                    </div>

                </div>
            }

        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

        <!-- BACK BUTTON -->
        <div class="text-center mt-5">
            <a asp-controller="Admin"
               asp-action="Dashboard"
               class="btn btn-primary px-4 rounded-pill">
                ← Back to Dashboard
            </a>
        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
