@model Domain.Models.DressCategory

@{
    ViewData["Title"] = "Add Dress Category";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Dress Category - StyleBay</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-light">

    <!-- BLUE ADMIN HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold"
                   asp-controller="Home"
                   asp-action="Index">
                    StyleBay
                </a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ADD DRESS CATEGORY -->
    <main class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">

                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">Add Dress Category</h4>
                    </div>

                    <div class="card-body p-4">

                        <form asp-action="CreateDressCategory" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly"
                                 class="alert alert-danger"></div>

                            <!-- Name -->
                            <div class="mb-4">
                                <label asp-for="Name"
                                       class="form-label fw-semibold"></label>
                                <input asp-for="Name"
                                       class="form-control"
                                       placeholder="Eg: Casual, Party, Wedding" />
                                <span asp-validation-for="Name"
                                      class="text-danger"></span>
                            </div>

                            <!-- Buttons -->
                            <div class="d-flex justify-content-between">
                                <a asp-controller="Admin"
                                   asp-action="ListDressCategory"
                                   class="btn btn-outline-secondary">
                                    ← Back
                                </a>

                                <button type="submit"
                                        class="btn btn-success px-4">
                                    Save Category
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
