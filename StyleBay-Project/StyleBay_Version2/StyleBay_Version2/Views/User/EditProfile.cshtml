@model Domain.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Profile | StyleBay</title>

    <!-- Separate CSS ONLY for Edit Profile -->
    <link rel="stylesheet" href="/css/editprofile.css" />
</head>
<body>

    <!-- HEADER -->
    <header>
        <div class="header-left">StyleBay</div>
    </header>

    <!-- CENTERED FORM -->
    <div class="profile-wrapper">
        <div class="profile-card">

            <h3 class="profile-heading">Edit Profile</h3>

            <form method="post" action="/User/EditProfile" class="edit-grid">

                <div class="form-group">
                    <input type="text"
                           name="Name"
                           value="@Model.Name"
                           class="profile-input"
                           placeholder="Name"
                           required />
                </div>

                <div class="form-group">
                    <input type="email"
                           name="Email"
                           value="@Model.Email"
                           class="profile-input"
                           placeholder="Email"
                           required />
                </div>

                <div class="form-group">
                    <input type="text"
                           name="City"
                           class="profile-input"
                           placeholder="City" />
                </div>

                <div class="form-group">
                    <input type="text"
                           name="PhoneNo"
                           class="profile-input"
                           placeholder="Phone Number" />
                </div>

                <div class="form-group">
                    <input type="text"
                           name="Address"
                           class="profile-input"
                           placeholder="Address" />
                </div>

                <div class="form-group">
                    <input type="text"
                           name="PinCode"
                           class="profile-input"
                           placeholder="Pin Code" />
                </div>

                <div class="form-group full">
                    <input type="password"
                           name="PasswordHash"
                           class="profile-input"
                           placeholder="Password" />
                </div>

                <div class="form-actions full">
                    <button type="submit" class="btn-update">Save Changes</button>
                    <button type="button"
                            class="btn-outline-pink"
                            onclick="location.href='/User/Profile'">
                        Cancel
                    </button>
                </div>

            </form>

        </div>
    </div>

</body>
</html>