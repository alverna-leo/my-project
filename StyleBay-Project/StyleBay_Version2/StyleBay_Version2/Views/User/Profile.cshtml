@model Domain.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>StyleBay</title>
    <link rel="stylesheet" href="/css/profile.css" />

</head>
<body>

    <header class="main-header">
        <div class="header-left">StyleBay</div>

        <!-- Right-side container for buttons -->
        <div class="header-right">
            <a href="/User/Index" class="header-home-btn">Home</a>
            <button class="more-btn" onclick="toggleDashboard()">More Options</button>
        </div>
    </header>




    <!-- DASHBOARD -->
    <div id="dashboard" class="dashboard">
        <button onclick="location.href='@Url.Action("Index", "Cart")'">View Cart</button>
        <button onclick="location.href='@Url.Action("MyOrders", "Order")'">View Orders</button>
        <button onclick="location.href='@Url.Action("EditProfile", "User")'">Edit Profile</button>

        <form method="post" action="/User/Logout">
            <button type="submit" class="logout">Logout</button>
        </form>
    </div>

    <!-- USER INFO -->
    <!-- USER INFO -->
    <div class="profile-container">
        <div class="profile-box">

            <div class="profile-icon">👤</div>
            <h2 class="profile-title">My Profile</h2>
            <div class="profile-divider"></div>

            <div class="profile-line">
                <span>Name</span> : @Model.Name
            </div>

            <div class="profile-line">
                <span>Email</span> : @Model.Email
            </div>

            <div class="profile-line">
                <span>Address</span> : @Model.Address
            </div>

            <div class="profile-line">
                <span>City</span> : @Model.City
            </div>

            <div class="profile-line">
                <span>State</span> : @Model.State
            </div>

            <div class="profile-line">
                <span>Pincode</span> : @Model.PinCode
            </div>

            <div class="profile-line">
                <span>Phone</span> : @Model.PhoneNumber
            </div>

        </div>
    </div>




    <script>
        function toggleDashboard() {
            const dash = document.getElementById("dashboard");
            dash.classList.toggle("open");
        }
    </script>


</body>
</html>