@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/OrderSuccess.css" />

<header class="header">
    <div class="header-title">StyleBay</div>
</header>

<div class="success-card">

    <h2>Order Placed Successfully 🎉</h2>

    <p class="order-id">
        Your Order ID: <strong>@ViewBag.OrderId</strong>
    </p>

    <p class="success-msg">
        Thank you for shopping with StyleBay! Your order has been recorded successfully.
    </p>

    <div class="button-group">
        <a href="/User/Index" class="btn btn-home">Back to Home</a>

        <a asp-controller="Order"
           asp-action="OrderDetails"
           asp-route-orderId="@ViewBag.OrderId"
           class="btn btn-orders">
            View Order Details
        </a>
    </div>

</div>
