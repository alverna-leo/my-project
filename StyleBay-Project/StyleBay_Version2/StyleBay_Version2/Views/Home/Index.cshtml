@{
    ViewData["Title"] = "Home";
    Layout = null;   // page-only layout
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>StyleBay</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/Registration.css" />
</head>
<body>

    <!-- HEADER / HERO SECTION -->
    <header class="home-bg">

        <!-- NAVBAR -->
        <nav class="navbar navbar-expand-sm navbar-dark rose-navbar border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold"
                   asp-controller="Home"
                   asp-action="Index">
                    StyleBay
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <!-- CENTER CONTENT -->
        <div class="container d-flex justify-content-center align-items-center min-vh-100">
            <div class="card text-center shadow" style="width: 22rem; background-color: rgba(255, 255, 255, 0.5);">
                <div class="card-body">
                    <h3 class="card-title mb-4">Login Portal</h3>

                    <a asp-controller="Account"
                       asp-action="AdminLogin"
                       class="btn btn-primary mb-3 w-100">
                        Admin Login
                    </a>

                    <a asp-controller="Account"
                       asp-action="Login"
                       class="btn rose-btn w-100">
                        User Login
                    </a>
                </div>
            </div>
        </div>



    </header>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
