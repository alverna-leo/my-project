@model Domain.DTO.RegisterDto

@{
    ViewData["Title"] = "User Registration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Registration - StyleBay</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Registration.css" asp-append-version="true" />
    <style>
        /* Make navbar links underlined */
        .underline-link {
            text-decoration: underline; /* always underlined */
            color: white; /* ensures link is visible on blue navbar */
        }

            .underline-link:hover {
                color: #ffeb3b; /* optional hover color */
                text-decoration: none; /* removes underline on hover if you like */
            }
    </style>

</head>

<body class="bg-light">

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light rose-navbar border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold"
                   asp-controller="Home"
                   asp-action="Index">
                    StyleBay
                </a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <button class="btn btn-light"
                                    onclick="location.href='@Url.Action("Index", "Home")'">
                                Home
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    

    @*         <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav> *@

    <!-- REGISTRATION SECTION -->
    <main class="container-fluid min-vh-100 d-flex justify-content-center align-items-center">
        <div class="card p-4 shadow-sm" style="width:450px;">

            <h4 class="text-center mb-4" style="color:black">
                User Registration
            </h4>

            <form asp-action="Register" method="post">

                <input asp-for="Name" class="form-control mb-2" placeholder="Name" />
                <input asp-for="Email" class="form-control mb-2" placeholder="Email" />
                <input asp-for="Password" type="password" class="form-control mb-2" placeholder="Password" />

                <input asp-for="PhoneNumber"
                       class="form-control mb-2"
                       placeholder="Phone Number"
                       maxlength="10"
                       minlength="10"
                       pattern="\d{10}"
                       title="Phone number must be exactly 10 digits"
                       required />

                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <input asp-for="Address" class="form-control mb-2" placeholder="Address" />

                <div class="row">
                    <div class="col">
                        <input asp-for="City" class="form-control mb-2" placeholder="City" />
                    </div>
                    <div class="col">
                        <input asp-for="State" class="form-control mb-2" placeholder="State" />
                    </div>
                    <div class="col">
                        <input asp-for="PinCode" class="form-control mb-2" placeholder="Pin Code" />
                    </div>
                </div>
                <button type="submit"
                        class="btn w-100"
                        style="background:#e91e63;color:white;">
                    Register
                </button>

            </form>

            <div class="text-danger mt-2">
                @Html.ValidationSummary()
            </div>

        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
