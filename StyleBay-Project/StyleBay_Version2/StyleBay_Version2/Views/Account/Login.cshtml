

@model Domain.DTO.LoginDto

@{
    ViewData["Title"] = "User Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Login - StyleBay</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Registration.css" />
</head>

<body class="bg-light">

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light rose-navbar border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold"
                   asp-controller="Home"
                   asp-action="Index">
                    StyleBay
                </a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <button class="btn btn-light"
                                    onclick="location.href='@Url.Action("Index", "Home")'">
                                Home
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

   @* < --login--> *@

    <main class="container-fluid min-vh-100 d-flex justify-content-center align-items-center">
        <div class="card p-5 shadow-sm" style="width:500px;">

            <h4 class="text-center mb-4">User Login</h4>

            <form asp-action="Login" method="post">

                <div class="mb-4">
                    <input asp-for="Email"
                           class="form-control"
                           placeholder="Email" />
                </div>

                <div class="mb-4">
                    <input asp-for="Password"
                           type="password"
                           class="form-control"
                           placeholder="Password" />
                </div>

                <button type="submit"
                        class="btn w-100 mt-3"
                        style="background:#e91e63;color:white;">
                    Login
                </button>
            </form>

            <div class="text-danger mt-3">
                @Html.ValidationSummary()
            </div>

            <hr class="my-4" />

            <p class="text-center mb-0">
                New User?
                <a asp-action="Register" class="btn btn-link p-0 ms-1">
                    Please Register
                </a>
            </p>

        </div>
    </main>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>